		--Selection Frame
	 <Frame name="Selection_Frame" hidden="true" parent="UIParent">
		<Size>
			<AbsDimension x="262" y="120"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="Loading_Frame">
