						<Offset>
							<AbsDimension x="0" y="-20"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnVerticalScroll>
						FauxScrollFrame_OnVerticalScroll(this, offset, 19, BinderScrollBar_Update);
					</OnVerticalScroll>
					<OnShow>
						BinderScrollBar_Update()
					</OnShow>
				</Scripts>
			</ScrollFrame>
			
			--The First Button
			<Button name="BinderEntry1" inherits="BinderSelectionEntryTemplate">
