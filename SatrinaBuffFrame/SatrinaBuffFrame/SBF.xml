<?xml version="1.0" encoding="utf-8"?>
<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/FrameXML/UI.xsd">
	<GameTooltip name="SBFTooltip" frameStrata="TOOLTIP" hidden="true" parent="UIParent" inherits="GameTooltipTemplate">
   <Scripts>
     <Onload>
       self:SetOwner(UIParent, "ANCHOR_NONE")
     </Onload>
   </Scripts>
  </GameTooltip>
  
  <!-- Drag tab for frames -->
  <Frame name="BuffFrameDragTabTemplate" hidden="true" frameStrata="DIALOG" virtual="true">
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
			<BackgroundInsets>
				<AbsInset left="0" right="0" top="0" bottom="0"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
		</Backdrop>
		<Size x="50" y="12"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentLabel" inherits="GameFontNormalSmall" justifyh="CENTER">
					<Size x="50" y="10"/>
					<Anchors><Anchor point="CENTER"/></Anchors>
				</FontString>
			</Layer>			
		</Layers>	
		<Scripts>
			<OnLoad>
				self:SetFrameLevel(20)
				self.label = getglobal(self:GetName().."Label")
			</OnLoad>
			<OnMouseDown>
				if (arg1 == "LeftButton") and self:IsVisible() then
					if IsShiftKeyDown() then
						SBFOptions:SelectFrame(self.frame.id)
					end
					self.frame:StartMoving()
				end
			</OnMouseDown>
			<OnMouseUp>
				self.frame:StopMovingOrSizing()
				local p,_,_,x,y = self.frame:GetPoint()
				SBF.db.profile.frames[self.frame.id].layout.point[1] = p
				SBF.db.profile.frames[self.frame.id].layout.point[2] = x
				SBF.db.profile.frames[self.frame.id].layout.point[3] = y
				SBF:GetExtent(self.frame.id)
			</OnMouseUp>
			<OnEnter>
				if not IsShiftKeyDown() then
					GameTooltip:SetOwner(this, anchor)
					GameTooltip:AddLine(string.format(SBF.strings.FRAMETITLE, self.frame.id))
					GameTooltip:AddLine(SBF.strings.DRAGTAB1)
					GameTooltip:AddLine(SBF.strings.DRAGTAB2)
					GameTooltip:Show()
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide()
			</OnLeave>
		</Scripts>
	</Frame>

  <!-- Anchor dot-->
	<Frame name="SBFBuffAnchorTemplate" frameStrata="BACKGROUND" virtual="true">
    <Size x="5" y="5"/>
    <Frames>
      <Frame name="$parentDot">
        <Size x="5" y="5"/>
        <Anchors><Anchor point="CENTER"/></Anchors>
        <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true"><TileSize val="4"/></Backdrop>
      </Frame>
    </Frames>
		<Scripts>
			<OnLoad>
        this.dot = getglobal(this:GetName().."Dot")
      </OnLoad>
    </Scripts>
  </Frame>
  
  <!-- Buff bar -->
	<Button name="SBFBuffBarTemplate" frameStrata="LOW" virtual="true">
		<Size x="250" y="20"/>
    <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true"><TileSize val="4"/></Backdrop>
    <Layers>
      <Layer level="ARTWORK">
				<Texture name="$parentBar">
          <Size x="250" y="20"/>
					<Anchors><Anchor point="CENTER"/></Anchors>
        </Texture>
      </Layer>
      <Layer level="OVERLAY">
				<Texture name="$parentSparkLeft" file="Interface\CastingBar\UI-CastingBar-Spark" alphaMode="ADD">
					<Size x="16" y="32"/>
					<Anchors><Anchor point="LEFT" relativeTo="$parentBar" relativePoint="LEFT"/></Anchors>
          <TexCoords left="1" right="0" top="0" bottom="1"/>
				</Texture>
				<Texture name="$parentSparkRight" file="Interface\CastingBar\UI-CastingBar-Spark" alphaMode="ADD">
					<Size x="16" y="32"/>
					<Anchors><Anchor point="RIGHT" relativeTo="$parentBar" relativePoint="RIGHT"/></Anchors>
          <TexCoords left="1" right="0" top="0" bottom="1"/>
        </Texture>
				<Texture name="$parentBorder" file="Interface\Buttons\UI-Debuff-Overlays">
					<Size x="250" y="20"/>
					<Anchors><Anchor point="CENTER"></Anchor>
					</Anchors>
					<TexCoords left="0.296875" right="0.5703125" top="0" bottom="0.515625"/>
				</Texture>	
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self.bar = getglobal(self:GetName().."Bar")
				self.sparkLeft = getglobal(self:GetName().."SparkLeft")
				self.sparkRight = getglobal(self:GetName().."SparkRight")
          self.border = getglobal(self:GetName().."Border")
          self:RegisterForClicks("LeftButtonDown", "RightButtonDown")
          self:SetScript("OnClick", SBF.Buff_OnClick)
          self:SetScript("OnEnter", SBF.ShowTooltip)
          self:SetScript("OnLeave", SBF.HideTooltip)
			</OnLoad>
		</Scripts>
	</Button>

  <!-- Buff icon -->
	<Button name="SBFBuffIconTemplate" frameStrata="LOW" hidden="true" virtual="true" enableMouse="true">
		<Size x="20" y="20"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentIcon"/>
			</Layer>
			<Layer level="OVERLAY">
				<Texture name="$parentBorder" file="Interface\Buttons\UI-Debuff-Overlays">
					<Size x="22" y="22"/>
					<Anchors><Anchor point="CENTER"><Offset x="0" y="0"/></Anchor></Anchors>
					<TexCoords left="0.296875" right="0.5703125" top="0" bottom="0.515625"/>
				</Texture>	
			</Layer>
		</Layers>
		<Frames>
			<Frame name="$parentDropDown" inherits="UIDropDownMenuTemplate" hidden="true">
				<Size x="10" y="10"/>
				<Anchors><Anchor point="TOP"/></Anchors>
			</Frame>
      <Cooldown name="$parentCooldown" inherits="CooldownFrameTemplate">
				<Size x="15" y="15"/>
				<Anchors><Anchor point="CENTER"/></Anchors>
			</Cooldown>
		</Frames>
    <NormalTexture name="$parentNormalTexture"/>
    <Scripts>
      <OnLoad>
        self.icon = getglobal(self:GetName().."Icon")
        self.cooldownSweep = getglobal(self:GetName().."Cooldown")
        self.border = getglobal(self:GetName().."Border")
        self.dropDown = getglobal(self:GetName().."DropDown")
        self.texture = getglobal(self:GetName().."NormalTexture")
        self:RegisterForClicks("LeftButtonDown", "RightButtonDown")
        self:SetScript("OnClick", SBF.Buff_OnClick)
        self:SetScript("OnEnter", SBF.ShowTooltip)
        self:SetScript("OnLeave", SBF.HideTooltip)
        UIDropDownMenu_Initialize(self.dropDown, SBF.BuffDropDown_Init, "MENU")
      </OnLoad>
    </Scripts>
	</Button>

  <!-- Buff count -->
	<Frame name="SBFBuffCountTemplate" frameStrata="LOW" virtual="true">
		<Size x="30" y="24"/>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentText" inherits="GameFontNormalSmall" justifyH="RIGHT">
					<Size x="30" y="24"/>
					<Anchors><Anchor point="CENTER"/></Anchors>
				</FontString>
      </Layer>
    </Layers>
		<Scripts>
			<OnLoad>
				self.text = getglobal(self:GetName().."Text")
			</OnLoad>
		</Scripts>
  </Frame>
  
  <!-- Buff name -->
	<Frame name="SBFBuffNameTemplate" frameStrata="LOW" virtual="true">
		<Size x="215" y="24"/>
    <Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentText" inherits="GameFontNormal" justifyH="CENTER">
					<Size x="215" y="24"/>
					<Anchors><Anchor point="CENTER"/></Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self.text = getglobal(self:GetName().."Text")
			</OnLoad>
		</Scripts>
	</Frame>

  <!-- Buff Timer -->
  <Frame name="SBFBuffTimerTemplate" frameStrata="LOW" virtual="true">
    <Size x="75" y="12"/>
    <Layers>
      <Layer level="OVERLAY">
        <FontString name="$parentText" inherits="GameFontNormalSmall"  justifyH="CENTER">
          <Size x="75" y="12"/>
          <Anchors><Anchor point="CENTER"/></Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad>
        self.text = getglobal(self:GetName().."Text")
      </OnLoad>
    </Scripts>
  </Frame>

  <!-- Buff frame template -->
	<Frame name="SBFBuffFrameTemplate" virtual="true" frameStrata="LOW" toplevel="true" movable="true" clampedtoscreen="true">
		<Size x="20" y="20"/>
	</Frame>
</Ui>
